<% @app.each do |app| %>
  <%= app.name %>
  <br/>
  <% AppInformation.where(type_id: app.id).first(5).each do |inf| %>
    <a href="<%= inf.url %>">
      <img src="<%= inf.image_url %>" style="width:100px; height: 100px;" />
      <p class="overflow-text app-name"><%= inf.name %></p>
    </a>
  <% end %>
  <%= link_to '查看更多', more_apps_frontend_apps_path(app_type_id: app.id) %>
  <br>
  <hr/>
<% end %>